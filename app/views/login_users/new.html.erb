<h1>新規ユーザー登録</h1>

<% if @login_user.errors.any? %>
  <div style="color:red;">
    <h2><%= pluralize(@login_user.errors.count, "件のエラー") %>があります:</h2>
    <ul>
      <% @login_user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @login_user, local: true do |f| %>
  <p>
    <%= f.label :login, "ログインID" %><br>
    <%= f.text_field :login %>
  </p>

  <p>
    <%= f.label :name, "名前" %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :lvl, "権限レベル" %><br>
    <%= f.select :lvl, [["管理者", 1], ["顧客管理者", 2], ["一般従業員", 3]] %>
  </p>

  <p>
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </p>

  <p>
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation %>
  </p>

  <p>
    <%= f.submit "登録" %>
  </p>
<% end %>

<%= link_to "一覧に戻る", login_users_path %>
